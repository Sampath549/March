@Html.AntiForgeryToken()

@if (ViewBag.DisplayModalPopup)
{
    <div id="UpdatePwdId" class="modal fade" tabindex="-1" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" style="top:10%;max-width:600px !important">
            <div class="modal-content">
                <div class="modal-header modalheader_intro">
                    <h4 class="modal-title modaltitle_intro">
                        <span class="modalheader_title textyellow"><i class="fa fa-hand-o-right m-l-3 m-r-4"></i>&nbsp;Change Password</span>
                    </h4>
                </div>
                <p style="color:red;float: right;margin: 0px 0 0 0; font-size:12px; line-height: 15px !important;padding: 0 0 25px 0px;font-family:'Montserrat',sans-serif !important;"> <b>(*) Mandatory:</b> New Password must contain 1 Uppercase, 1 Lowercase, 1 number, 1 special character & should be between 8 to 50 Characters length.</p>
                <div class="modal-body" style="text-align: left;">
                    <form role="form" class="form-horizontal" id="FirstTimeLogin" name="FirstTimeLogin" novalidate autocomplete="off" style="text-align:left !important;">
                        <div class="form-group">
                            <label class="col-md-4 control-label" style="text-align:left !important;">Old Password :</label>
                            <div class="col-md-8">
                                <input type="password" class="form-control" name="UPoldpwd" id="UPoldpwd" maxlength="50" style="height:35px !important;" required autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" style="text-align:left !important;">New Password :</label>
                            <div class="col-md-8">
                                <input type="password" class="form-control" name="UPpwd" id="UPpwd" maxlength="50" style="height:35px !important;" required autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" style="text-align:left !important;">Confirm Password :</label>
                            <div class="col-md-8">
                                <input type="password" class="form-control" name="UPCpwd" id="UPCpwd" maxlength="50" style="height:35px !important;" required autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-primary btnWidth" value="Save" style="float:right;" />
                                @*<button id="UpdatePwd" class="btn btn-blue btn-icon btn-icon-standalone btn-icon-standalone-right br4" style="float:right;">
                                        <i class="fa fa-download"></i>
                                        <span>Update</span>
                                    </button>*@
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="loadingImg" style="display:none"></div>
    <script src="~/Content/js/toastr/toastr.min.js"></script>
    <script src="~/Content/js/Functional/OneTimePassword.js"></script>
}
